@model CommunityHub.Core.Models.SetPassword

<style>
    .container {
        margin-top: 70px;
    }
</style>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Set Password</h2>
                </div>
                <div class="card-body">
                    <form asp-action="SetPassword" method="post">
                        <div class="form-group">
                            <label for="NewPassword" class="mt-2 mb-2" style="margin-left: 10px;">New Password</label>

                            <div class="d-flex align-items-center">
                                <input type="password" class="form-control mb-3" id="NewPassword" asp-for="Password" />
                                <i class="bi bi-info-circle ms-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Password must be at least 8 characters long, contain 1 uppercase letter, 1 number, and 1 special character."></i>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="ConfirmPassword" class="mt-2 mb-2" style="margin-left: 10px;">Confirm Password</label>
                            <input type="password" class="form-control mb-3" id="ConfirmPassword" asp-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Token" />
                        <input type="hidden" asp-for="Email" />

                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Set Password</button>
                        </div>
                    </form>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="successMessage" class="alert alert-success mt-3">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (ViewBag.ErrorMessage != null)
                {
                    <div id="errorMessage" class="alert alert-danger mt-3">
                        @ViewBag.ErrorMessage
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/common-actions.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

